# i3 config file (v4)
# File originally by Quantumr8 <https://github.com/quantumr8/>

###---Basic Definitions---###{{{
hide_edge_borders both
for_window [class="^.*"] border pixel 0
gaps inner 25
gaps outer 20
font pango:System San Francisco Display 12
set $term --no-startup-id $TERMINAL
set $mod Mod4
set $browser qutebrowser
#}}}

###---Starting External Scripts---###{{{
exec --no-startup-id compton -cCGf -b
exec_always wal -i /home/sam/Pictures/wallpapers/simple_sunset.jpg
exec discord
exec qutebrowser
#}}}

###---Music/Misc Bindings---###{{{
# Media player Definitions
set $music urxvt -e ncmpcpp
set $pause --no-startup-id mpc toggle
set $truepause --no-startup-id mpc pause
set $next --no-startup-id mpc next
set $prev --no-startup-id mpc prev

# Audo Mixer Definitions
set $inc --no-startup-id amixer sset Master 5%+
set $dec --no-startup-id amixer sset Master 5%-
set $mute --no-startup-id amixer sset Master toggle
set $truemute --no-startup-id amixer sset Master mute
set $audio --no-startup-id

# Volume Keys
bindsym XF86AudioRaiseVolume exec $inc
bindsym XF86AudioLowerVolume exec $dec
bindsym XF86AudioMute exec $mute

# Sreen Brightness Keys
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 # decrease screen brightness

# Touchpad Toggle
bindsym XF86TouchpadToggle exec /home/sam/.scripts/toggletouchpad.sh
#}}}

###---Dropdown Windows---###{{{
for_window[instance="dropdown"] floating enable
for_window[instance="dropdown"] sticky enable
for_window[instance="dropdown"] resize set 625 450 
for_window[instance="dropdown"] border pixel 2
for_window[instance="dropdown"] move position center
for_window[instance="dropdown"] move scratchpad
exec --no-startup-id $term -name dropdown
#}}}

###---Basic Bindings---###{{{
bindsym $mod+Return           exec $term
bindsym $mod+Shift+Return     split horizontal ;; exec $term
bindsym $mod+backslash        split vertical ;; exec $term

bindsym $mod+Shift+space      floating toggle
bindsym $mod+space            focus mode_toggle

bindsym $mod+Escape           workspace prev
bindsym $mod+Shift+Escape     exec i3-msg exit

#bindsym $mod+Backspace        exec $flash
bindsym $mod+Shift+Backspace  exec sudo reboot

bindsym $mod+grave            exec [instance="dropdown"] scratchpad show ;; move position center
bindsym $mod+Shift+Delete     exec $truemute ; exec $truepause ; workspace lmao ; exec $term -e htop ; exec $term -e neofetch ; exec $term -e ranger
#}}}

###---Letter Key Binding---###{{{
bindsym $mod+q                kill
bindsym $mod+Shift+q          kill

bindsym $mod+w                exec --no-startup-id $browser
#bindsym $mod+Shift+w          exec --no-startup-id $browser

bindsym $mod+e                exec $term -e mutt
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+r                exec $term -e ranger
bindsym $mod+Shift+r          restart

bindsym $mod+t                split toggle
bindsym $mod+Shift+t          gaps inner current set 15; gaps outer current set 15

#bindsym $mod+y                exec
bindsym $mod+Shift+y          resize shrink width 10 px

bindsym $mod+u                [instance="dropdown"] scratchpad show; move position center
bindsym $mod+Shift+u          resize shrink height 10 px

bindsym $mod+i                exec $term -e htop
bindsym $mod+Shift+i          resize grow height 10 px

#bindsym $mod+o                exec
bindsym $mod+Shift+o          resize grow width 10 px

bindsym $mod+p                exec $pause
bindsym $mod+Shift+p          exec $HOME/.scripts/toggledisplay.sh 

#bindsym $mod+a                exec
bindsym $mod+Shift+a          exec $term -e alsamixer

bindsym $mod+s                gaps inner current plus 5
bindsym $mod+Shift+s          gaps inner current minus 5

bindsym $mod+d                exec rofi -show run
bindsym $mod+Shift+d          gaps inner current set 0; gaps outer current set 0

bindsym $mod+f                fullscreen toggle
#bindsym $mod+Shift+f          exec

bindsym $mod+g                workspace prev
#bindsym $mod+Shift+g          exec

bindsym $mod+h                focus left
bindsym $mod+Shift+h          move left 30

bindsym $mod+j                focus down
bindsym $mod+Shift+j          move down 30

bindsym $mod+k                focus up
bindsym $mod+Shift+k          move up 30

bindsym $mod+l                focus right
bindsym $mod+Shift+l          focus right 30

bindsym $mod+z                gaps outer current plus 5
bindsym $mod+Shift+z          gaps outer current minus 5

bindsym $mod+x                exec i3lock
bindsym $mod+Shift+x          exec sudo shutdown -h now

#bindsym $mod+c                exec
#bindsym $mod+Shift+c          exec

bindsym $mod+v                exec urxvt -e ncmpcpp -s visualizer
#bindsym $mod+Shift+v          exec

bindsym $mod+b                exec $prev
#bindsym $mod+Shift+b          exec

bindsym $mod+n                exec $next
#bindsym $mod+Shift+n          exec

bindsym $mod+m                exec $music
bindsym $mod+Shift+m          exec $mute
#}}}

###---Workspace Bindings---###{{{
set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8: Music"
set $ws9 "9"
set $ws10 "10: Discord "

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Tab workspace back_and_forth

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Assigned workspace programs
#assign [class="Gnome-terminal"] $ws1
assign [class="qutebrowser"] $ws2
assign [class="discord"] $ws10

workspace $ws8 gaps inner 0
workspace $ws8 gaps outer 0
workspace $ws10 gaps inner 0
workspace $ws10 gaps outer 0
#}}}

###---Colors---###{{{
# Automatically set by wal script.

set_from_resource $fg i3wm.color7 #f0f0f0
set_from_resource $bg i3wm.color2 #f0f0f0
# class                 border  backgr. text indicator child_border
client.focused          $bg     $bg     $fg  $bg       $bg
client.focused_inactive $bg     $bg     $fg  $bg       $bg
client.unfocused        $bg     $bg     $fg  $bg       $bg
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg
client.background       $bg
#}}}

